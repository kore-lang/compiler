module Compiler
	/// <summary>
	/// Represents an available type.
	/// </summary>
	class Type
		/// <summary>
		/// Indicates whether the type is valid or not.
		/// </summary>
		valid as bool
		
		/// <summary>
		/// Unique ID for the type.
		/// </summary>
		id as int
		
		/// <summary>
		/// Type size in bytes.
		/// </summary>
		size as int
	end
end